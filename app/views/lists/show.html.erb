<div class="mini-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('mojtaba-hosseinzade-fB824nd3WWU-unsplash.jpg') %>);">
  <div class="banner-style">
    <h2><%= @list.name %></h2>
  </div>
</div>


<div class="container">
  <div class="mt-3 mb-3 text-right">
    <%= link_to "Add Movie", new_list_bookmark_path(@list), class: 'btn btn-danger'  %>
  </div>
</div>

<div class="container">
  <h3>Movies</h3>
  <div class="cards">
        <div class="movie-card">
    <% @list.bookmarks.each do |bookmark| %>
          <img src="<%= bookmark.movie.poster_url %>" alt="">
          <h4><%= bookmark.movie.title %></h4>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.movie.rating %></p>
          <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
    <% end %>
          </div>
          </div>
        </div>
    <%= link_to "Back to List", lists_path, class: 'btn btn-primary'  %>
  </div>
  </div>
</div>
